        <ion-col col-6>
            <h3>Filter</h3>
        </ion-col>
        <ion-col col-6 text-right>
            <button class="bg-button" (click)="Filter()">Done</button>
        </ion-col>
        <!-- <ion-col col-6 >
            <button (click)="Reset()">Reset</button>
        </ion-col> -->
      </ion-row>
  </ion-grid>


