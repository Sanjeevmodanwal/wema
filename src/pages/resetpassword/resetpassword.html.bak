<ion-header no-border>
    <ion-navbar>
      <button ion-button menuToggle>
        <ion-icon name="menu"></ion-icon>
      </button>
    </ion-navbar> 
  </ion-header>
  
  <ion-content>
  
    <ion-grid>
        <ion-row>
          <ion-col col-12>
              <h2 class="slide-title text">Reset Password</h2>
              <p class="sign-text-up">Lorem ipsum dolor sit amet, consectetur adipiscing elit. eleifend in ultrices non, imperdiet vel nisl.</p>
              <ion-item class="border-none">
                <ion-label>New Password</ion-label>
              </ion-item>
              <ion-item>
                <ion-label><ion-icon name="md-lock"></ion-icon></ion-label>
                <ion-input  type="password"  [(ngModel)]="password"  ></ion-input>
              </ion-item>

              <ion-item class="border-none">
                  <ion-label>Confirm Password</ion-label>
                </ion-item>
                <ion-item>
                  <ion-label><ion-icon name="md-lock"></ion-icon></ion-label>
                  <ion-input   type="password" [(ngModel)]="confirmPassword" (ionChange)="passwordChange()" ></ion-input>
                  <div class="custom-label" *ngIf="password!='' && confirmPassword!='' && !isMatched" style="color:#f53d3d;font-size: 12px">Password mismatch!</div><br/>
                </ion-item>

              <div class="sign-button-mi"> 
                <button class="sign-button" (click)="submit()"  >
                    Update Password
                </button>
              </div>
              <p class="signup-text" (click)="Loginpage()">Just remember? <a>Sign in</a></p>
              
        </ion-col>
        </ion-row>
    </ion-grid>
  
  
  </ion-content>
  